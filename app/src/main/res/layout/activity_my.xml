<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exitButton"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/reponseText"
        android:layout_alignEnd="@+id/reponseText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/reponseText"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/exitButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HTTP GET"
        android:id="@+id/httpGet"
        android:layout_alignTop="@+id/exitButton"
        android:layout_alignLeft="@+id/reponseText"
        android:layout_alignStart="@+id/reponseText" />
</RelativeLayout>
